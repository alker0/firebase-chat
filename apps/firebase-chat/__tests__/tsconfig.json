{
  "compilerOptions": {
    // Target latest browsers
    "target": "ES2020",

    "module": "CommonJS",

    // `import React` instead of `import * as React`
    // when type check
    "allowSyntheticDefaultImports": true,
    // when compiling
    "esModuleInterop": true,

    "jsx": "preserve",

    // Required: Map "/web_modules/*" imports back to their node_modules/ TS definition files.
    "baseUrl": "./",
    "paths": {
      "@scripts/*": ["../scripts/*"]
    },

    "allowJs": true,
    "checkJs": false,

    // Skip npm module type check.
    "skipLibCheck": true,

    // Only for type checks.
    "noEmit": true,

    // Useful type checks.
    "strictNullChecks": true,

    // Disallow implicit any.
    "noImplicitAny": true,
  },

  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.spec.ts",
    "**/*.js",
    "../scripts/**/*.ts",
    "../scripts/**/*.d.ts",
    "../scripts/**/*.js"
  ],

  "exclude": [
    "../node_modules"
  ],
}
