{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatuers": {
      "jsx": true
    },
    "project": [ "./tsconfig.json", "./scripts/tsconfig.json", "./__tests__/tsconfig.json" ],
    "useJSXTextNode": true
  },
  "plugins": ["@typescript-eslint", "jest", "import", "prettier"],
  "extends": [
    "airbnb-typescript",
    // "plugin:@typescript-eslint/recommended",
    "plugin:jest/all",
    "prettier/@typescript-eslint",
    "prettier/react",
    "plugin:prettier/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "commonjs": true
  },
  "globals": {
    "JSX": "readonly",
    "firebase": "readonly",
    "firebaseui": "readonly"
  },
  "rules": {
    "no-console": "off",
    "default-case": "off",
    "no-else-return": "off",
    "global-require": "off",
    "yoda": ["error", "never", {
      "onlyEquality": true
    }],
    "react/jsx-filename-extension": ["error", {"extensions": [".js", ".jsx", ".ts", ".tsx"]}],
    "react/react-in-jsx-scope": "off",
    "react/jsx-props-no-spreading": "off",
    "react/destructuring-assignment": "off",
    "react/prop-types": "off",
    "react/no-children-prop": "off",
    "react/no-unknown-property": ["error", {"ignore": ["class"]}],
    "react/button-has-type": "off",
    "jsx-a11y/anchor-is-valid": ["error", {
      "aspects": ["invalidHref"]
    }],
    "jsx-a11y/anchor-has-content": "off",
    "import/no-unresolved": "off",
    "import/prefer-default-export": "off",
    "import/no-extraneous-dependencies": "off",
    "import/extensions": ["error", {
      "js": "never",
      "jsx": "never",
      "ts": "never",
      "tsx": "never",
      "d.ts": "never"
    }],
    "jest/no-hooks": [
      "error",
      {
        "allow": ["beforeAll", "afterAll"]
      }
    ],
    "jest/expect-expect": [
      "error",
      {
        "assertFunctionNames": ["expect", "firebase.assertSucceeds", "firebase.assertFails"]
      }
    ]
  }
}
