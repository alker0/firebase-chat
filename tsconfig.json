{
  "compilerOptions": {
    // Target latest browsers
    "target": "ES2019",
    "lib": ["ES2019", "DOM", "DOM.Iterable"],

    // Required: Use module="ESNext" so that TS won't compile/disallow any ESM syntax.
    "module": "ESNext",

    // Required for some packages.
    "moduleResolution": "Node",

    // `import React` instead of `import * as React`
    "allowSyntheticDefaultImports": true,

    "jsx": "preserve",

    // Required: Map "/web_modules/*" imports back to their node_modules/ TS definition files.
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/@types/*",
        "web_modules/.types/*",
        "node_modules/*",
        // "web_modules/*.js"
      ],
      "solid-js/*": ["solid-js/types/*"],
      "@lib/*": ["src/lib/*"],
      "@components/*": ["src/components/*"],
      "@components/cirrus/*": ["src/components/cirrus/src/*"]
    },

    // Skip npm module type check.
    "skipLibCheck": true,

    // Only for type checks.
    "noEmit": true,

    // Useful type checks.
    "strictNullChecks": true,

    // Disallow implicit any.
    "noImplicitAny": true
  },

  "include": [
    "./src/**/*",
    "node_modules/solid-js/dist/types/rendering/jsx.d.ts",
    "node_modules/@alker/solid-styled-tsx/styled-jsx.d.ts"
  ],

  "exclude": [
    "node_modules",
    "./src/lib/solid-styled-tsx/*",
    "./src/lib/ts-filtered-css-class/*"
  ],
}
