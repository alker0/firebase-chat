{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/@types/*",
        "node_modules/*",
      ],
      "solid-js/*": [
        "solid-js/types/*"
      ],
    },
    "skipLibCheck": true,
    "noEmit": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
  },
  "include": [
    "./src/**/*",
    "./types/**/*",
    "node_modules/solid-js/dist/types/rendering/jsx.d.ts",
    "node_modules/solid-styled-jsx/style",
    // "node_modules/@alker/styled-tsx/index.d.ts",
    "../styled-tsx/index.d.ts",
    // "node_modules/type-filtered-clsx/index.d.ts",
    "../type-filtered-clsx/index.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
