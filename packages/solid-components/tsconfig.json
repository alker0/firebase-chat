{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/@types/*",
        "node_modules/*",
      ],
    },
    "skipLibCheck": true,
    "noEmit": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
  },
  "include": [
    "./src/**/*",
    "./types/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
