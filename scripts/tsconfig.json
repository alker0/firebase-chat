{
  "compilerOptions": {
    // Target latest browsers
    // "target": "ES2020",
    "target": "ES2019",
    //"lib": ["ES2019"],

    "module": "commonjs",

    // `import React` instead of `import * as React`
    "allowSyntheticDefaultImports": true,

    "jsx": "preserve",

    // Required: Map "/web_modules/*" imports back to their node_modules/ TS definition files.
    "baseUrl": "./",
    "paths": {
    },

    "allowJs": true,
    "checkJs": false,

    // Skip npm module type check.
    "skipLibCheck": true,

    // Only for type checks.
    "noEmit": true,

    // Useful type checks.
    "strictNullChecks": true,

    // Disallow implicit any.
    "noImplicitAny": true,
  },

  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.js",
  ],

  "exclude": [
    "../node_modules"
  ],
}
