{
  "compilerOptions": {
    "target": "ES2020",
    //"lib": ["ES2020"],

    "module": "commonjs",

    // `import React` instead of `import * as React`
    "allowSyntheticDefaultImports": true,

    "jsx": "preserve",

    "baseUrl": "./",
    "paths": {
    },

    "allowJs": true,
    "checkJs": false,

    "skipLibCheck": true,

    // Only for type checks.
    "noEmit": true,

    // Useful type checks.
    "strictNullChecks": true,

    // Disallow implicit any.
    "noImplicitAny": true,
  },

  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.js",
  ],

  "exclude": [
    "../node_modules"
  ],
}
